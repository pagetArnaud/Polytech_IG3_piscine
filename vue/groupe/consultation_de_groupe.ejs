<%- include('../commun/head'); %>

<body>
    <h5>Groupe rejoint</h5>
    <div>
        <ul id="groupe">
            <% groupe.forEach(function(groupe) { %>
                <li class="grp">
                    <h5><%= groupe.nomGrp %></h5>
                    <form action='/etu/groupe/alter' method='post' class="col text-left">
                        <input type="hidden" name="idGroupe" value="<%= groupe.id %>" >
                        <button type="submit" class="btn btn-primary border rounded">Modifier Groupe</button> 
                    </form>
                    <form action='/etu/groupe/delete' method='post' class="col text-left">
                        <input type="hidden" name="idGrp" value="<%= groupe.id %>" >
                        <button type="submit" class="btn btn-primary border rounded">Supprimer Groupe</button> 
                    </form>
                </li>
            <% }); %>
        </ul>
    </div>
    <h5>Creer un groupe</h5>
    <div>
        <div class="col text-left"><a href="/etu/groupe/cree" class="btn btn-primary border rounded" id="b-group" type="button" >Cr√©er un groupe</a></div>
    </div>
</body>
