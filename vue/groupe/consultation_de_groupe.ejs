<%- include('../commun/head'); %>

<body>
    <h5>Groupe rejoint</h5>
    <div class="container" style="margin: 0px;padding: 18px;width: 1060px;height: 200px;border-style: solid;">
        <ul>
            <% groupe.forEach(function(groupe) { %>
                <li>
                    <p><%= groupe.nomGrp %></p>
                    <form action='/etu/groupe/alter' method='post' >
                        <input type="hidden" name="idGroupe" value="<%= groupe.id %>" >
                        <button type="submit">Modifier Groupe</button> 
                    </form>
                    <form action='/etu/groupe/delete' method='post' >
                        <input type="hidden" name="idGrp" value="<%= groupe.id %>" >
                        <button type="submit">Supprimer Groupe</button> 
                    </form>
                </li>
            <% }); %>
        </ul>
    </div>
    <h5>Creer un groupe</h5>
    <div class="row" style="margin: 81px;">
        <div class="col text-left"><a href="/etu/groupe/cree" class="btn btn-primary border rounded" id="b-group" type="button" style="width: 735px;height: 101px;margin: 0px;margin-right: 8px;font-size: 39px;">Cr√©er un groupe</a></div>
    </div>
</body>
