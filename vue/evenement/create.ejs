<%- include('../commun/headAdmin'); %>
<link rel="stylesheet" href="/css/create_event.css">
<body>
<div>
    <form action="/admin/evenement/" method="post" name="EVENT">
        <div class="form-check">
            <input class="form-check-input" type="radio" name="name" id="exampleRadios1" value="stage" checked>
            <label class="form-check-label" for="exampleRadios1">
                Stage
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="name" id="exampleRadios2" value="projet">
            <label class="form-check-label" for="exampleRadios2">
                Projet
            </label>
        </div>



            <div class="col">
                <label for="exampleFormControlSelect1">Promo
                    <select class="form-control" id="exampleFormControlSelect1" name = "promo">
                        <% for (var i = 0; i < promo.length; i++) { %>
                            <option value= "<%= promo[i].id %>"><%= promo[i].id %></option>
                        <%}%>

                    </select></label>
            </div>
            <div class="col">
                <label>Duree evenement(jour)
                    <input type="number" name="dureeEvent" min="1" value="1" class="form-control">
                </label>
            </div>
            <div class=" col">
                <label>Nombre Jury
                    <input type="number" name="nbrJury" min="1" value="1" class="form-control">
                </label>
            </div>


        <div class="form-group">
            <label>Debut évènement
                <input type="date" name="dateDebut">
            </label>

        </div>


        <div class="form-group">
            <label>Durée d'un créneau de soutenance (Heure:Minute)
                <input type="time" name="dureeCreneau">
            </label>

        </div>

        <div class="form-group">
            <label>Date limite de réservation
                <input type="date" name="dateLimiteResa">
            </label>

        </div>

        <button type="submit" class="btn btn-primary" value="post">Envoyer</button>


    </form>
</div>
</body>


